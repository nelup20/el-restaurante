{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2019",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"]
}
